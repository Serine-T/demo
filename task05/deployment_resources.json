{
  "lambda-basic-execution": {
    "policy_content": {
      "Statement": [
        {
          "Action": [
            "logs:CreateLogGroup",
            "logs:CreateLogStream",
            "logs:PutLogEvents",
            "logs:PutLogEvents",
            "dynamodb:GetItem",
            "dynamodb:Query",
            "dynamodb:PutItem",
            "dynamodb:Batch*",
            "dynamodb:DeleteItem",
            "dynamodb:DescribeTable",
            "ssm:PutParameter",
            "ssm:GetParameter",
            "kms:Decrypt",
            "lambda:InvokeFunction"
          ],
          "Effect": "Allow",
          "Resource": "arn:aws:logs:*:*:*"
        },
        {
          "Action": ["dynamodb:PutItem"],
          "Effect": "Allow",
          "Resource": "arn:aws:dynamodb:*:*:table/${target_table}"
        }
      ],
      "Version": "2012-10-17"
    },
    "resource_type": "iam_policy",
    "tags": {}
  },
  "task5_api": {
    "resource_type": "api_gateway",
    "deploy_stage": "api",
    "dependencies": [],
    "resources": {
      "/events": {
        "enable_cors": false,
        "POST": {
          "authorization_type": "NONE",
          "integration_type": "lambda",
          "lambda_name": "api_handler",
          "api_key_required": false,
          "method_request_parameters": {},
          "integration_request_body_template": {},
          "responses": [],
          "enable_proxy": true,
          "integration_responses": [],
          "default_error_pattern": true
        }
      }
    },
    "tags": {}
  },
  "Events": {
    "resource_type": "dynamodb_table",
    "hash_key_name": "id",
    "hash_key_type": "S",
    "read_capacity": 5,
    "write_capacity": 5,
    "global_indexes": [],
    "autoscaling": [],
    "tags": {}
  }
}
